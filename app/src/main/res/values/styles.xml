<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="toolbar_right" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
    <item name="android:minWidth">56dp</item>
    <item name="android:scaleType">center</item>
    <item name="android:textSize">@dimen/text_size_14</item>
  </style>

  <style name="AVLoadingIndicatorView">
    <item name="minWidth">48dip</item>
    <item name="maxWidth">48dip</item>
    <item name="minHeight">48dip</item>
    <item name="maxHeight">48dip</item>
    <item name="indicatorName">BallPulseIndicator</item>
  </style>

  <style name="ToolBarStyle" parent="@style/Theme.AppCompat.Light.NoActionBar">
  </style>

</resources>
